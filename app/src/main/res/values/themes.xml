<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RannastaSuomeen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="backgroundColor">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorPrimary">@color/light_yellow</item>
        <item name="colorPrimaryVariant">@color/sand</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_orange</item>
        <item name="colorSecondaryVariant">@color/dark_orange</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorSecondary</item>
        <!-- Customize your theme here. -->
        <item name="colorError">@color/red</item>
        <item name="colorButtonNormal">@color/green</item>
    </style>
    <style name="Theme.RannastaSuomeen.Switch" parent="Theme.RannastaSuomeen">
        <item name="trackTint">?colorSecondary</item>
        <item name="thumbTint">?colorSecondaryVariant</item>
    </style>
</resources>