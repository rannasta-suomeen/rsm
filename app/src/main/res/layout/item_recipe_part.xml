<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="?colorSecondary">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewRecipePartName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="Bols Blue curacao"
            android:textColor="?colorOnPrimary"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewRecipePartVolume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/volume"
            android:textSize="16sp"
            android:textColor="?colorOnBackground"
            app:layout_constraintBottom_toBottomOf="@+id/textViewRecipePartName"
            app:layout_constraintStart_toEndOf="@+id/textViewRecipePartName"
            app:layout_constraintTop_toTopOf="@+id/textViewRecipePartName" />

        <TextView
            android:id="@+id/textViewRecipePartPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/price"
            android:textSize="16sp"
            android:textColor="?colorOnBackground"
            app:layout_constraintBottom_toBottomOf="@+id/textViewRecipePartVolume"
            app:layout_constraintStart_toEndOf="@+id/textViewRecipePartVolume"
            app:layout_constraintTop_toTopOf="@+id/textViewRecipePartVolume" />

        <TextView
            android:id="@+id/textViewRecipePartAer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/price"
            android:textSize="16sp"
            android:textColor="?colorOnBackground"
            app:layout_constraintBottom_toBottomOf="@+id/textViewRecipePartPrice"
            app:layout_constraintStart_toEndOf="@+id/textViewRecipePartPrice"
            app:layout_constraintTop_toTopOf="@+id/textViewRecipePartPrice" />

        <ImageView
            android:id="@+id/imageViewRecipePartOwned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:scaleX="2"
            android:scaleY="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_check_24"
            app:tint="@color/green" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>